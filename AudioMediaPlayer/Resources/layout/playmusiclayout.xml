<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
         android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/toolbarMusic"
        app:titleTextColor="#ffffff"
        android:background="#9370DB"
          app:theme="@style/ToolbarColoredBackArrow"
         app:popupTheme="@style/AppTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewMusic"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"/>
    <ScrollView
        android:id="@+id/scrollViewMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbarMusic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="#232323"
            android:padding="15dp">

            <ImageView
                android:id="@+id/imageViewMusicImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="80dp"
                 app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/floatingActionButtonPause"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/textViewMusicPlayTime"
                android:text="00:00"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                app:layout_constraintTop_toBottomOf="@+id/imageViewMusicImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/seekBarMusic"/>

            <SeekBar
                android:id="@+id/seekBarMusic"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:thumbTint="#9370DB"
                app:layout_constraintTop_toTopOf="@+id/textViewMusicPlayTime"
                app:layout_constraintStart_toEndOf="@+id/textViewMusicPlayTime"
                app:layout_constraintEnd_toStartOf="@+id/textViewMusicDuration"
                app:layout_constraintBottom_toBottomOf="@+id/textViewMusicPlayTime"/>
            
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/textViewMusicDuration"
                android:text="00:00"
                android:textColor="#ffffff"
                app:layout_constraintTop_toTopOf="@+id/seekBarMusic"
                app:layout_constraintStart_toEndOf="@+id/seekBarMusic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/seekBarMusic"/>

              <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButtonPrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/ic_previous"
                android:backgroundTint="#9370DB"
                app:tint="#ffffff"
                android:layout_marginVertical="20dp"
                app:layout_constraintTop_toBottomOf="@+id/seekBarMusic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/floatingActionButtonPause"
                app:layout_constraintBottom_toBottomOf="parent"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButtonPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/ic_pause"
                app:tint="#ffffff"
                android:backgroundTint="#9370DB"
                app:layout_constraintTop_toTopOf="@+id/floatingActionButtonPrevious"
                app:layout_constraintStart_toEndOf="@+id/floatingActionButtonPrevious"
                app:layout_constraintEnd_toStartOf="@+id/floatingActionButtonNext"
                app:layout_constraintBottom_toBottomOf="@+id/floatingActionButtonPrevious"/>

             <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButtonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/ic_next"
                app:tint="#ffffff"
                android:backgroundTint="#9370DB"
                app:layout_constraintTop_toTopOf="@+id/floatingActionButtonPrevious"
                app:layout_constraintStart_toEndOf="@+id/floatingActionButtonPause"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/floatingActionButtonPrevious"/>

   </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
